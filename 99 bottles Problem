var i = 99
function beer()
{
 while(i>=0)
  {
      if (i ===  1)
      {
          console.log(i, 'bottle of beer on the wall, '+ i + ' bottle of beer')
      }
      else{
           console.log(i, 'bottles of beer on the wall, '+ i + ' bottles of beer')    
      }
i--
console.log('Take one down and pass it around, '+ i + ' bottles of beer on the wall')
}
}
beer()
